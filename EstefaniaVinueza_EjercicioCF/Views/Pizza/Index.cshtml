@model IEnumerable<EstefaniaVinueza_EjercicioCF.Models.Pizza>

@{
    ViewData["Title"] = "Tabla de pedidos";
}

<h1>Tabla de pedidos</h1>
<img src="images/pizza3.jpg" alt="Pizza" width="300" height="150">


<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WithCheese)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WithTomatoes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WithCheese)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WithTomatoes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PizzaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PizzaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PizzaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
